@viewModel System.Object, mscorlib
@baseType DotvvmCoffeeTemplate.Controls.YesNoQuestion, DotvvmCoffeeTemplate

<span>
    <label>{{controlProperty: Question}}</label>
    <dot:RadioButton Text="Yes" CheckedItem="{controlProperty: IsYes}" CheckedValue="{value: true}"/>
    <dot:RadioButton Text="No" CheckedItem="{controlProperty: IsYes}" CheckedValue="{value: false}"/>
</span>